<% layout('/layouts/boilerplate') %>

  <div class="container-fluid">


    <div class="card mb-4">
      <div class="card-header">
        <i class="fas fa-table me-1"></i>
        List of Employees>
      </div>
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Employee Name</th>
              <th scope="col">View Details</th>
            </tr>
          </thead>
          <tbody>
            <% let counter=1; %>
              <% for (let record of records) { %>
                <tr>
                  <td>
                    <%= counter %>
                  </td>
                  <td class="col-md-4 mb-2">
                    <% if (record.employeeName && record.employeeName.employeeLName && record.employeeName.employeeFName
                      && record.employeeName.employeeMidName) { %>
                      <%= record.employeeName.employeeLName %>, <%= record.employeeName.employeeFName %>
                          <%= record.employeeName.employeeMidName.charAt(0) %>.
                            <% } %>

                  </td>
                  <td class="col-md-2 mb-2"><a href="/records/<%= record._id %>"><i class="bi bi-eye"></i></a></td>
                </tr>
                <% counter++; %>
                  <% } %>
          </tbody>
        </table>
      </div>
    </div>
  <div class="container-fluid">